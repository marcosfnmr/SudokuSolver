<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorFondo">
    <androidx.cardview.widget.CardView
        android:id="@+id/crdGrid"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/colorGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="24">
            <androidx.cardview.widget.CardView
                android:id="@+id/a1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="0"
                android:layout_column="0"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/a2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="0"
                android:layout_column="1"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/a3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="0"
                android:layout_column="2"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/a4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="0"
                android:layout_column="3"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/b1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="1"
                android:layout_column="0"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/b2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="1"
                android:layout_column="1"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/b3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="1"
                android:layout_column="2"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/b4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="1"
                android:layout_column="3"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/c1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="2"
                android:layout_column="0"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="2"
                android:layout_column="1"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="2"
                android:layout_column="2"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="2"
                android:layout_column="3"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/d1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="3"
                android:layout_column="0"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/d2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="3"
                android:layout_column="1"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/d3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="3"
                android:layout_column="2"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/d4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3.75dp"
                android:layout_row="3"
                android:layout_column="3"
                app:cardBackgroundColor="@color/cuadradoGrid">
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSolve"
        android:backgroundTint="@color/colorGrid"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/crdGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>